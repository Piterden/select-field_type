{{ asset_add('styles.css', 'anomaly.field_type.select::less/select2-bootstrap.less') }}

<select class="form-control" name="{{ field_type.input_name }}" {{ field_type.disabled ? 'disabled' }}>

    {% if not field_type.required %}
        <option>{{ trans(field_type.placeholder) }}</option>
    {% endif %}

    {% for value, option in field_type.options %}
        {% if option is iterable %}
            <optgroup label="{{ value }}">
                {% for value, option in option %}
                    <option value="{{ value }}" {{ value == field_type.key ? 'selected' }}>{{ trans(option) }}</option>
                {% endfor %}
            </optgroup>
        {% else %}
            <option value="{{ value }}" {{ value == field_type.key ? 'selected' }}>{{ trans(option) }}</option>
        {% endif %}
    {% endfor %}

</select>

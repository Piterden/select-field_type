{% for value, option in field_type.options %}
    {% if option is iterable %}

        <label>{{ value }}</label>

        {% for value, option in option %}
            <label class="radio">
                <input
                        type="radio"
                        value="{{ value }}"
                        name="{{ field_type.input_name }}"
                        {{ value == field_type.key ? 'checked' }}>

                {{ trans(option) }}
            </label>
        {% endfor %}
    {% else %}
        <label class="radio">
            <input
                    type="radio"
                    value="{{ value }}"
                    name="{{ field_type.input_name }}"
                    {{ value == field_type.key ? 'checked' }}>

            {{ trans(option) }}
        </label>
    {% endif %}
{% endfor %}
